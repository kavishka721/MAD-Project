<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parentRelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#414343"
    android:padding="8dp">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="130dp"
            app:cardBackgroundColor="#636363">

                <ImageView
                    android:id="@+id/recycleImg"
                    android:layout_width="150dp"
                    android:layout_height="120dp"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:id="@+id/imgPartName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/recycleImg"
                    android:layout_marginStart="170dp"
                    android:layout_marginTop="10dp"
                    android:text="Part Name"
                    android:textColor="@color/textColor"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/imgpartPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="170dp"
                    android:layout_marginTop="50dp"
                    android:text="Price"
                    android:textColor="@color/textColor"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/imgselectbtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="170dp"
                    android:layout_marginTop="80dp"
                    android:onClick="selectBtn"
                    android:text="Select" />

        </androidx.cardview.widget.CardView>


</RelativeLayout>