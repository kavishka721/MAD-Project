<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hback"
    tools:context=".orderList">

    <ImageView
        android:id="@+id/imageView29"
        android:layout_width="417dp"
        android:layout_height="567dp"
        android:layout_marginTop="136dp"
        android:background="@drawable/intersectionew3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView30"
        android:layout_width="436dp"
        android:layout_height="648dp"
        android:layout_marginTop="112dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/intersectionew2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="4dp" />

    <ImageView
        android:id="@+id/imageView31"
        android:layout_width="368dp"
        android:layout_height="636dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="136dp"
        android:background="@drawable/intersectionew1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="84dp" />

    <View
        android:id="@+id/divider2"
        android:layout_width="494dp"
        android:layout_height="11dp"
        android:layout_marginTop="24dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.168"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_quantity" />

    <Button
        android:id="@+id/deleteBtn"
        android:layout_width="170dp"
        android:layout_height="52dp"
        android:layout_marginEnd="28dp"
        android:layout_marginRight="28dp"

        android:background="#1976D2"
        android:backgroundTint="#2196F3"
        android:onClick="delete"
        android:text="Delete"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewAddress"
        app:layout_constraintVertical_bias="0.281" />

    <Button
        android:id="@+id/updateBtn"
        android:layout_width="170dp"
        android:layout_height="52dp"
        android:background="#1976D2"

        android:backgroundTint="#2196F3"
        android:onClick="delete"
        android:text="Update"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/deleteBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewAddress"
        app:layout_constraintVertical_bias="0.281" />

    <TextView
        android:id="@+id/viewProductName"
        android:layout_width="183dp"
        android:layout_height="45dp"
        android:layout_marginTop="68dp"
        android:text=""
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.456"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView25" />

    <TextView
        android:id="@+id/view_quantity"
        android:layout_width="205dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:text=""
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider" />

    <TextView
        android:id="@+id/viewAddress"
        android:layout_width="328dp"
        android:layout_height="65dp"
        android:layout_marginTop="40dp"
        android:text=""
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.468"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider2" />

    <TextView
        android:id="@+id/textView25"
        android:layout_width="311dp"
        android:layout_height="89dp"
        android:layout_marginTop="16dp"
        android:text="Ordered Items"
        android:textColor="#FDFFFD"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/divider"
        android:layout_width="494dp"
        android:layout_height="11dp"
        android:layout_marginTop="40dp"
        android:background="?android:attr/listDivider"
        android:backgroundTint="#4CAF50"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.036"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewProductName" />

</androidx.constraintlayout.widget.ConstraintLayout>