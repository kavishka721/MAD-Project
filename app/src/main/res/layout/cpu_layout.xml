<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:id="@+id/cpu_layout">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="384dp"
        android:layout_height="270dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        app:cardBackgroundColor="#F5F5F5"
        app:cardCornerRadius="8dp"
        app:cardElevation="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/CPU_Price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="230dp"
            android:fontFamily="@font/doppio_one"
            android:text="@string/proc_price1"
            android:textSize="22sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/CPUSelect"
            android:layout_width="76dp"
            android:layout_height="34dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="180dp"
            android:background="@drawable/selectbtn"
            android:fontFamily="@font/doppio_one"
            android:text="@string/selectbtn"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/CPU_Detail"
            android:layout_width="242dp"
            android:layout_height="207dp"
            android:layout_marginStart="160dp"
            android:layout_marginTop="60dp"
            android:fontFamily="@font/doppio_one"
            android:text="@string/pros_detail1"
            android:textSize="19sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/CPU_Image"
            android:layout_width="115dp"
            android:layout_height="116dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="74dp"
            android:layout_height="37dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            app:srcCompat="@drawable/cpucard" />

        <TextView
            android:id="@+id/CPU_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/doppio_one"
            android:text="@string/pros_name1"
            android:textSize="22sp"
            android:textStyle="bold" />

        <com.github.ybq.android.spinkit.SpinKitView
            android:id="@+id/spin_kit"
            style="@style/SpinKitView.DoubleBounce"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="85dp"
            app:SpinKit_Color="#505151" />

    </androidx.cardview.widget.CardView>
</RelativeLayout>