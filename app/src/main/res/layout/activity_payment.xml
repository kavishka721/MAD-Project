<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hback"
    tools:context=".Activity.Authentication.PaymentActivity">

    <ImageView
        android:id="@+id/imageView29"
        android:layout_width="417dp"
        android:layout_height="567dp"
        android:layout_marginTop="136dp"
        android:background="@drawable/intersectionew3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView30"
        android:layout_width="436dp"
        android:layout_height="648dp"
        android:layout_marginTop="112dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/intersectionew2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="4dp" />

    <ImageView
        android:id="@+id/imageView31"
        android:layout_width="368dp"
        android:layout_height="636dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="136dp"
        android:background="@drawable/intersectionew1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="84dp" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="215dp"
        android:layout_height="98dp"
        android:layout_marginTop="16dp"
        android:text="Add Payment Details"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="137dp"
        android:layout_height="106dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/payment" />

    <EditText
        android:id="@+id/cardNo"
        android:layout_width="295dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:drawableStart="@drawable/ic_baseline_credit_card_24"
        android:drawablePadding="16dp"
        android:ems="10"
        android:hint="Credit/ Debit Card Number"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.612"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/paymentMethod"
        android:drawableLeft="@drawable/ic_baseline_credit_card_24" />

    <EditText
        android:id="@+id/expireDate"
        android:layout_width="295dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:drawableStart="@drawable/ic_baseline_credit_card_24"
        android:drawablePadding="16dp"
        android:ems="10"
        android:hint="Expiration Date"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.612"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardNo" />

    <Spinner
        android:id="@+id/paymentMethod"
        android:layout_width="295dp"
        android:layout_height="40dp"
        android:layout_marginTop="60dp"
        android:drawableStart="@drawable/ic_baseline_credit_card_24"
        android:drawablePadding="16dp"
        android:spinnerMode="dropdown"
        android:ems="10"
        android:hint="Payment Method"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.612"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12"
        android:drawableLeft="@drawable/ic_baseline_credit_card_24" />

    <EditText
        android:id="@+id/address"
        android:layout_width="250dp"
        android:layout_height="47dp"
        android:layout_marginTop="16dp"
        android:drawableStart="@drawable/ic_baseline_home_24"
        android:drawablePadding="16dp"
        android:ems="10"
        android:hint="Billing Address"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.44"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/expireDate" />

    <EditText
        android:id="@+id/postalCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:drawableStart="@drawable/ic_baseline_post_add_24"
        android:drawablePadding="16dp"
        android:ems="10"
        android:hint="Postal Code"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.353"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/address" />

    <Button
        android:id="@+id/btnSignUp"
        android:layout_width="199dp"
        android:layout_height="52dp"
        android:layout_marginTop="32dp"
        android:background="#2196F3"
        android:text="Sign Up"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/postalCode" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="344dp"
        android:layout_height="38dp"
        android:shadowColor="#000000"
        android:text="By clicking Sign Up, I agree to all Terms and Conditions and Privacy Policy."
        android:textColor="#000000"
        android:textColorLink="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSignUp"
        app:layout_constraintVertical_bias="0.164" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView19"
        app:layout_constraintVertical_bias="0.481" />

</androidx.constraintlayout.widget.ConstraintLayout>