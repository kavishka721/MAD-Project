<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/build_layout">

    <androidx.cardview.widget.CardView
        android:layout_width="361dp"
        android:layout_height="150dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="16dp"
        app:cardBackgroundColor="#D1CFCF"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/Build_No"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/doppio_one"
            android:text="@string/pc_build_one"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Build_Tot"
            android:layout_width="114dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/doppio_one"
            android:text="@string/build_price1"
            android:textColor="#393737"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="25dp"
            android:layout_height="21dp"
            android:layout_marginLeft="61dp"
            android:layout_marginTop="8dp"
            app:srcCompat="@drawable/carddot1" />

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="25dp"
            android:layout_height="21dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="8dp"
            app:srcCompat="@drawable/carddot2" />

        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="25dp"
            android:layout_height="21dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            app:srcCompat="@drawable/carddot3" />

        <TextView
            android:id="@+id/Build_Detail"
            android:layout_width="226dp"
            android:layout_height="134dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/doppio_one"
            android:paddingTop="35dp"
            android:text="@string/config1_build"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/Update_Btn"
            android:layout_width="71dp"
            android:layout_height="36dp"
            android:layout_marginLeft="270dp"
            android:layout_marginTop="45dp"
            android:background="@drawable/updatebtn"
            android:fontFamily="@font/doppio_one"
            android:text="@string/updatebtn"
            android:textColor="#F6F5F5"
            android:textStyle="bold" />

        <Button
            android:id="@+id/Delete_Btn"
            android:layout_width="71dp"
            android:layout_height="36dp"
            android:layout_marginLeft="270dp"
            android:layout_marginTop="90dp"
            android:background="@drawable/deletebtn"
            android:elevation="8dp"
            android:fontFamily="@font/doppio_one"
            android:text="@string/deletebtn"
            android:textColor="#F6F5F5"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>
</RelativeLayout>